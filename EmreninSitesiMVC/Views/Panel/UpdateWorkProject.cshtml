@model WorkProjectVM
@{
    ViewBag.Title = "UpdateWorkProject";
    Layout = "~/Views/Shared/Panel.cshtml";
}

@using (Html.BeginForm("UpdateWorkProject", "Panel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(x => x.WorkProject.ID)

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Firma Adı</label>
        <br />
        <div class="col-sm-10">
            <img src="@Model.WorkProject.WallPaper" style="width:100px; height:auto;" />
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Firma Adı</label>
        <br />
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.WorkProject.ProjectHead, new { @class = "form-control genislik", placeholder = Model.WorkProject.ProjectHead })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Projenin Fiyatı</label>
        <br />
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.WorkProject.ProcetPrice, new { @class = "form-control genislik", placeholder = Model.WorkProject.ProcetPrice })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Ne Kadar Sürede Tamamlandı</label>
        <br />
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.WorkProject.Time, new { @class = "form-control genislik", placeholder = Model.WorkProject.Time })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Açıklaması(Kısa Yazınız)</label>
        <br />
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.WorkProject.Description, new { @class = "form-control genislik", placeholder = Model.WorkProject.Description })
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Kategori</label>
        <br />
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.WorkProject.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), Model.WorkProject.Category.CategoryName)
        </div>

    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Resim seciniz</label>
        <br />

        @for (int i = 0; i < Model.WorkProject.ImagePaths.Count; i++)
        {

            <div class="col-sm-9">
                <div>@Model.WorkProject.ImagePaths[i].Description</div>
                <br />
                <img src="@Model.WorkProject.ImagePaths[i].ImageUrl" style="width:100px;height:auto;" />
            </div>
            <br />
        }

        <div class="col-sm-10">
            <input type="file" multiple name="resim" class="form-control genislik" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button class="btn btn-primary">
                Fotoğrafları Düzenleme Sayfası
            </button>
        </div>
    </div>
}

