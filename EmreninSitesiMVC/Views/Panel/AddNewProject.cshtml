@model WorkProjectVM
@{
    ViewBag.Title = "AddNewProject";
    Layout = "~/Views/Shared/Panel.cshtml";
}

@using (Html.BeginForm("AddNewProject", "Panel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <label class="col-sm-2 col-sm-2 control-label">Proje Ekle</label>
    <br />
    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Firma Adı</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.WorkProject.ProjectHead, new { @class = "form-control genislik", placeholder = "Firma Adı Giriniz" })
            <br />
            @Html.ValidationMessageFor(x => x.WorkProject.ProjectHead)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Projenin Fiyatı</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.WorkProject.ProcetPrice, new { @class = "form-control genislik", placeholder = "Fiyat" })
            <br />
            @Html.ValidationMessageFor(x => x.WorkProject.ProcetPrice)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Ne Kadar Sürede Tamamlandı</label>
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.WorkProject.Time, new { @class = "form-control genislik", placeholder = "Örn:2Ay" })
            <br />
            @Html.ValidationMessageFor(x => x.WorkProject.Time)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Açıklaması(Kısa Yazınız)</label>
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.WorkProject.Description, new { @class = "form-control genislik", placeholder = "Proje Açıklamasını Girin" })
            <br />
            @Html.ValidationMessageFor(x => x.WorkProject.Description)
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Kategori</label>
        <div class="col-sm-10">
            @Html.DropDownListFor(x => x.WorkProject.CategoryID, new SelectList(Model.Categories, "ID", "CategoryName"), "Lutfen Seciniz")
        </div>

    </div>

    <div class="form-group">
        <label class="col-sm-2 col-sm-2 control-label">Resim seciniz</label>
        <div class="col-sm-10">
            <input type="file" multiple name="resim" class="form-control genislik" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-10">
            <button class="btn btn-primary">
                Ekle
            </button>
        </div>
    </div>

}

